class Solution {
    public int mySqrt(int x) {
        if(x == 1|| x==0){return x;}
        return (int)(squareRoot(x));
    }
        static double squareRoot(double n){
        double x = n;
        double root;
        double error = 0.0005;

        while(true){
            root = 0.5*(x+(n/x));
            
            if((Math.abs(root-x)) < error){
                break;
            } else {
                x = root;
            }
        }
        return root;
    }
}
